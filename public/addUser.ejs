<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add User</title>
    
</head>
<body>
    <h1>Add User</h1>
    
    <div>
        <% if (errors) { %>
            <% errors.forEach(function(error){ %>
                <p><%= error.msg %></p>
            <% }) %>
        <% } %>
                
                <% if (err) { %>
                    <p><%= err %></p>
                <% } %>     
    </div>
    <div class="row">
        <div class="col-md-6">
            <form method="POST" action="/users/addUser">
                <div class="form-group col-md-12">
                    <label for="exampleInputPassword1">First Name</label>
                    <input class="form-control" type="text" name="fName" placeholder="First Name" />
                </div>
                <div class="form-group col-md-12">
                    <label for="exampleInputPassword1">Last Name</label>
                    <input class="form-control" type="text" name="lName" placeholder="Last Name" />
                </div>
                <div class="form-group col-md-12">
                    <label for="exampleInputPassword1">Email</label>
                    <input class="form-control" type="text" name="email" placeholder="Email" />
                </div>
                <div class="form-group col-md-12">
                    <label for="exampleInputPassword1">Zip Code</label>
                    <input class="form-control" type="text" name="zipCode" placeholder="Zip Code" />
                </div>
                <div class="form-group col-md-12">
                    <label for="exampleInputPassword1">City</label>
                    <input class="form-control" type="text" name="city" placeholder="City" />
                </div>
                <div class="form-group col-md-12">
                    <label for="exampleInputPassword1">Street</label>
                    <input class="form-control" type="text" name="street" placeholder="Street" />
                </div>
                <div class="form-group col-md-12">
                    <label for="exampleInputPassword1">Number</label>
                    <input class="form-control" type="text" name="number" placeholder="Number" />
                </div>
                <div class="form-group col-md-12">
                    <label for="exampleInputPassword1">Password</label>
                    <input class="form-control" type="password" name="password" placeholder="Password" />
                </div>
                <div class="form-group col-md-12">
                    <label for="exampleInputPassword1">Confirm Password</label>
                    <input class="form-control" type="password" name="confirm_password" placeholder="Confirm Password" />
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-sm btn-primary">Add User</button>
                </div>
                
            </form>
        </div>
    </div>
</body>
</html>