
<div class="m-2">
        <form action="/orders/addOrder" method="GET">
          <button class="btn btn-success">Add Order</button>
        </form>
        <div class="row justify-content-between">
          <%data.forEach(e=>{%>
          <div class="card m-2" style="width: 18rem">
            <div class="card-header">Book: <%= e.book %></div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Book ID : <%= e.bookId %></li>
              <li class="list-group-item">Quantity: <%= e.qty %></li>
            </ul>
            <form action="/orders/<%= e._id%>" method="GET">
                <button class="btn btn-secondary w-100">Show Order</button>
              </form>
          </div>
    
          <%})%>
        </div>
</div>
