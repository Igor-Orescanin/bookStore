<h1>Show All Books</h1>

    <form action="/books/addBook" method="GET">
        <button class="btn btn-success">Add Books</button>
    </form>
<div class="row justify-content-between">
<%books.forEach(e=>{%>
    <div class="col-md-4">
 <div class="card container" style="width: 18rem;">
        <div class="card-body">
            <h5>Author: <%= e.author%></h5>
            <p class="card-text"><strong>Title:</strong> <%= e.title%></p>
            <p class="card-text"><a href="/books/<%= e._id%>" class="btn btn-primary btn-sm">Check out book</a></p>
        </div>
    </div>
   
    
   
</div>
<%})%>
</div>


