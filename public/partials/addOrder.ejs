

    <h1>Add Order</h1>

    <div class="row">
        <div class="col-md-6">
            <form method="POST" action="/orders/addOrder">
                <div class="form-group col-md-12">
                    <label >BookId</label>
                    <input class="form-control" type="text" name="bookId" placeholder="BookId" />
                </div>
                <div class="form-group col-md-12">
                    <label >Quantity</label>
                    <input class="form-control" type="text" name="qty" placeholder="Quantity" />
                </div>
                <div class="form-group col-md-12">
                    <label >Books</label>
                    <input class="form-control" type="text" name="books" placeholder="Books" />
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-sm btn-primary">Add Order</button>
                </div>
                
            </form>
        </div>
    </div>

